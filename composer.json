{
    "name": "wearesho-team/phonet",
    "description": "Phonet Api Integration",
    "type": "library",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.3",
        "horat1us/environment-config": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Varkuta",
            "email": "roman.varkuta@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Wearesho\\Phonet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wearesho\\Phonet\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 ./src ./tests",
        "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
        "cover": "phpunit --coverage-clover=coverage.xml",
        "test": "phpunit"
    }
}
